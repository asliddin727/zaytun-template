                                .order-item-main 
                                    .order-datetime
                                        .receipt 
                                            span Получение:
                                            p Курьером, Дом
                                        .datetime 
                                            span Дата заказа:
                                            p 16.07.2020
                                        .payment-type
                                            span Тип оплаты:
                                            p Онлайн
                                    .order-imgs 
                                        img(src="../assets/images/orders/order-4.png", alt="")
                                        img(src="../assets/images/orders/order-5.png", alt="")
                                        img(src="../assets/images/orders/order-6.png", alt="")
                                        img(src="../assets/images/orders/order-7.png", alt="")
                        li.order-item 
                            a.order-link(href="#") 
                                .order-item-header 
                                    .order-number
                                        .name Номер заказа
                                        .order-id 83429
                                    .status Доставляется
                                    .total-price 
                                        .name К оплате
                                        .price 12 902 000 сум
                                .order-item-main 
                                    .order-datetime
                                        .receipt 
                                            span Получение:
                                            p Курьером, Работа
                                        .datetime 
                                            span Дата заказа:
                                            p 12.07.2020
                                        .payment-type
                                            span Тип оплаты:
                                            p Пластиковой картой
                                    .order-imgs 
                                        img(src="../assets/images/orders/order-8.png", alt="")     
                    //- Order ID
                    .enter-order 
                        .enter-order-header 
                            h4 Заказ
                            span Номер заказа
                            .order-number 83429
                        .enter-order-main 
                            .order-left 
                                .order-status-information
                                    .order-status 
                                        button.status Доставлен
                                        .order-status-info
                                                .receipt 
                                                    span Получение:
                                                    p Самовывоз
                                                .datetime 
                                                    span Дата заказа:
                                                    p 17.07.2020
                                                .payment-type
                                                    span Тип оплаты:
                                                    p Онлайн
                                    .order-address-user-info 
                                        .delivery 
                                            img(src="../assets/images/icons/delivery.svg", alt="")
                                            .desc 
