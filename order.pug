                                            span При получении, курьеру
                                    .order-cash-main 
                                        .product Товары 
                                            span.count (3)
                                            span.sum 17 923 090 сум
                                        .discounts Скидки
                                            span.sum - 1 819 023 сум
                                        .delivery Доставка
                                            .time-status
                                                .status Бесплатно
                                                .time за 24 часа
                                    .order-cash-bottom 
                                        span К оплате
                                        .total-price 16 011 067 сум
                                .cash-button Повторить заказ

                                    

                    //- Order Empty 
                    .my-order-container-empty
                        img(src="../assets/images/icons/stack-big.svg", alt="Мои заказы")
